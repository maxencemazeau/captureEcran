<Window x:Class="screenRecoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Capture Example" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image x:Name="CapturedImage" Grid.Row="0" Stretch="Uniform" />

        <Button x:Name="CaptureScreenButton" Grid.Row="1" Content="Capture Screen" />
    </Grid>
</Window>